<body>
    <script>
        let a = prompt("Nhập vào 1 số từ 1-9:");
        if (a > 9 || a < 1) {
            document.write("Số vượt quá giới hạn");
        } else {
            if (a == 1) {
                document.write("Cách đọc của số " + a + " là " + "một");
            } else if (a == 2) {
                document.write("Cách đọc của số " + a + " là " + "hai");
            } else if (a == 3) {
                document.write("Cách đọc của số " + a + " là " + "ba");
            } else if (a == 4) {
                document.write("Cách đọc của số " + a + " là " + "bốn");
            } else if (a == 5) {
                document.write("Cách đọc của số " + a + " là " + "năm");
            } else if (a == 6) {
                document.write("Cách đọc của số " + a + " là " + "sáu");
            } else if (a == 7) {
                document.write("Cách đọc của số " + a + " là " + "bảy");
            } else if (a == 8) {
                document.write("Cách đọc của số " + a + " là " + "tám");
            } else if (a == 9) {
                document.write("Cách đọc của số " + a + " là " + "chín");
            }
        }
    </script>
</body>
</html>
